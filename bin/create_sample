#!/bin/bash

T_W=24
T_H=24

usage_exit() {
    echo "Usage: $0 [-w width] [-h height] project_root" 1>&2
    exit 1
}

while getopts w:h: OPT
do
    case $OPT in
        w)  T_W=$OPTARG
            ;;
        h)  T_H=$OPTARG
            ;;
        \?)  usage_exit
             ;;
    esac
done

shift $((OPTIND -1))

if [ $# = 0 ]; then
    usage_exit
fi

opencv_createsamples -info $1/src/pos.txt -vec $1/src/positive.vec -w $T_W -h $T_H
